# ============================================
# Backend Environment Variables Template
# ============================================
# Copy this file to backend/.env and fill in your actual values

# ============================================
# Application Environment
# ============================================
NODE_ENV=development

# ============================================
# Service Ports
# ============================================
PORT=3000
AUTH_SERVICE_PORT=3001
BOOK_SERVICE_PORT=3002
USER_SERVICE_PORT=3003
ML_SERVICE_PORT=8000

# ============================================
# Service URLs (for Docker Compose)
# ============================================
AUTH_SERVICE_URL=http://auth-service:3001
BOOK_SERVICE_URL=http://book-service:3002
USER_SERVICE_URL=http://user-service:3003
ML_SERVICE_URL=http://ml-service:8000

# ============================================
# JWT Configuration
# ============================================
# IMPORTANT: Generate strong secrets for production!
# Use: openssl rand -base64 32
JWT_SECRET=your-secret-key-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-change-in-production

# ============================================
# Database Configuration
# ============================================
# PostgreSQL connection string
DATABASE_URL=postgresql://eshelf:eshelf123@postgres:5432/eshelf?schema=public

# PostgreSQL individual settings
POSTGRES_USER=eshelf
POSTGRES_PASSWORD=eshelf123
POSTGRES_DB=eshelf
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ============================================
# CORS Configuration
# ============================================
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX_REQUESTS=1000

# ============================================
# Logging
# ============================================
LOG_LEVEL=info
